<Window x:Class="KC2.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:KC2"
		xmlns:controls="clr-namespace:KC2.Controls"
		mc:Ignorable="d"
		Title="KAOCursor" Height="450" Width="800" MinWidth="128" MinHeight="128" Closed="Window_Closed" Icon="/Images/AppIcon.ico">

	<Grid>
		<Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>

		<Grid x:Name="OverLayRectangle" Visibility="Hidden">
			<Rectangle Fill="Black" Opacity=".5"/>
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="1*"/>
					<ColumnDefinition Width="3*"/>
					<ColumnDefinition Width="1*"/>
				</Grid.ColumnDefinitions>
				<ProgressBar Grid.Column="1" IsIndeterminate="True" Height="32"/>
			</Grid>

		</Grid>
	</Grid>
	
</Window>
