<UserControl x:Class="KC2.Controls.VideoCaptureView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KC2.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<Grid>
		<Image Source="{Binding RelativeSource={RelativeSource AncestorType=local:VideoCaptureView},Path=CroppedFrame}">
			<Image.LayoutTransform>
				<TransformGroup>
					<ScaleTransform ScaleX="{Binding RelativeSource={RelativeSource AncestorType=local:VideoCaptureView},Path=ScaleX}" ScaleY="{Binding RelativeSource={RelativeSource AncestorType=local:VideoCaptureView},Path=ScaleY}"/>
					<RotateTransform Angle="{Binding RelativeSource={RelativeSource AncestorType=local:VideoCaptureView},Path=Angle}" />
				</TransformGroup>
			</Image.LayoutTransform>
		</Image>
	</Grid>
</UserControl>
